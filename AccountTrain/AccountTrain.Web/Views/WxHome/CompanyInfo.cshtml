
@{
     ViewBag.Title = "联系我们";
}


<style>
	.key-span {	
		float: left;	
		font-size: 17px;
		padding-left: 20px;
	}
	.value-span {
		float: right;	
		margin-left: 15px;
		font-size: 17px;
		color: #999;
		width: 210px;
	}
</style>

<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	<meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport" />
	<meta content="yes" name="apple-mobile-web-app-capable" />
	<meta content="black" name="apple-mobile-web-app-status-bar-style" />
	<meta content="telephone=no" name="format-detection" />
	<meta name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=no" />
	<meta charset="UTF-8" />
   <title>联系我们</title>
</head>
<body>
  	<header data-am-widget="header" class="am-header am-header-default" style="background-color: white;">
	  <div class="am-header-left am-header-nav">
		  <a v-if="document.referrer!=''" href="javascript:window.history.back(); " class="">
		  	<img class="am-header-icon-custom" src="~/Images/icon/返回.png" alt=""/>
		  </a>
	  </div>
	  <h3 class="am-header-title" style="color: black;padding-top: 15px;font-size: 18px;">
          联系我们
      </h3>
	</header>
  	<hr style="margin-top: 0px;"/>
    <form class="am-form">
        <fieldset>
            <div id="company" model="data">
                <div class="am-input-group" style="margin-bottom: 15px;">
                    <div class="key-span">公司名称</div>
                    <div class="value-span">{{data.CompanyName}}</div>                    
                </div>
                <hr style="margin-top: 0px;"/>
                <div class="am-input-group" style="margin-bottom: 15px;">
                    <div class="key-span">公司地址</div>
                    <div class="value-span">{{data.CompanyAddress}}</div>
                </div>
                <hr style="margin-top: 0px;"/>
                <div class="am-input-group" style="margin-bottom: 15px;">
                    <div class="key-span">公司电话</div>
                    <div class="value-span">{{data.CompanyTelephone}}</div>
                </div>
				<hr style="margin-top: 0px;"/>
                <div class="am-input-group" style="margin-bottom: 15px;">
                    <div class="key-span">公司邮箱</div>
                    <div class="value-span">{{data.CompanyEmail}}</div>                    
                </div>   
                <hr style="margin-top: 0px;"/>
                <div class="am-input-group" style="margin-bottom: 15px;">
                    <div class="key-span">公司简介</div>
                    <div class="value-span">{{data.Remark}}</div>                    
                </div>   
            </div>
        </fieldset>
    </form>
   
</div>
</body>


<script>
	var openid = '@ViewBag.Openid';
	var companyVue=new Vue({
		el:"#company",
		data:{
			data:{}
		},
		created: function () {
                var _self = this;
                $.ajax({
                    type: "get",
                    dataType: "json",
                    contentType: "application/json",
                    url: "/WxHome/GetCompanyInfo",
                    success: function (result) {
                        _self.data = result;
                    }
                });
           }
	});
	
	 function guid() {
