
@{
     ViewBag.Title = "精品课程";
}


<style>
.am-btn-this
{
	display:inline-block;
	margin-bottom:0;
	/*padding:.5em 1em;*/
	vertical-align:middle;
	font-size:0.6rem;
	font-weight:400;
	text-align:center;
	white-space:nowrap;
	background-image:none;
	border:1px solid transparent;
	border-radius:0;
	cursor:pointer;
	outline:0;
	-webkit-appearance:none;
	-webkit-user-select:none;
	-moz-user-select:none;
	-ms-user-select:none;
