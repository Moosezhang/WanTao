        beforeCreate:function (){
        	var _self = this;
            $.ajax({
                type: "get",
                dataType: "json",
                contentType: "application/json",
                url: "/BaseSet/GetDicItemsByDicKey",
                data:{
                	key:"7C5BE2E8-2D74-4047-B6EB-CBC1F8A1D701"
                },
