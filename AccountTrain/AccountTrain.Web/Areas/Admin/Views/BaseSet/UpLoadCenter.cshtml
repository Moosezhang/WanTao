@{
    ViewBag.Title = "文章管理";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<script src="https://cdn.polyfill.io/v2/polyfill.min.js"></script>
<div class="wz">
        您当前所在的位置：上传中心
</div>
<div id="UpLoad">
    <el-row style="margin-top:10px;margin-left:10px">
        <el-col span="24">
            <div>
                <el-input v-model="txtName" id="txtName" placeholder="请输入上传标题" clearable style="width:200px;"></el-input>
                <el-button size="mini" style="margin-left:10px" type="primary"
                           v-on:click="QueryData()">查询</el-button>
                <el-button size="mini" type="warning"
                           v-on:click="handleAdd()">新增</el-button>
            </div>
        </el-col>
    </el-row>

    <div style="margin-top:5px;margin-left:10px">
        <template>
            <el-table border stripe
                      v-bind:data="tableData.slice((currentPage-1)*pagesize,currentPage*pagesize)"
                      v-bind:default-sort="{prop: 'CreateTime', order: 'descending'}"
                      style="width: 100%">
                <el-table-column prop="UpLoadTitle"
                                 label="上传标题"
                                 width="100">
                </el-table-column>
                <el-table-column prop="UpLoadUrl"
                                 label="保存路径">
                </el-table-column>  
                <el-table-column prop="ShowUrl"
                                 label="展示路径">
                </el-table-column> 
                <el-table-column fixed="right"
                                 label="操作"
                                 width="200" header-align="center" align="center">
                    <template slot-scope="scope">
                        <el-button size="mini"
                                   v-on:click="handleEdit(scope.row.UpLoadId)">编辑</el-button>
                        <el-button v-if="scope.row.Status==1" size="mini"
                                   type="danger"
                                   v-on:click="handleDisable(scope.row.UpLoadId,0)">禁用</el-button>
                    </template>
                </el-table-column>
            </el-table>
            <el-pagination 
            				v-on:size-change="handleSizeChange"
							v-on:current-change="handleCurrentChange"
						    :current-page="currentPage"
						    :page-sizes="[10, 20, 50, 100]"
						    :page-size="pagesize"
						    layout="total, prev, pager, next"
						    :total="tableData.length">
            </el-pagination>
        </template>

    </div>

    <el-dialog title="上传" v-bind:visible.sync="dialogUpLoadFormVisible" v-model="dialogUpLoadFormVisible" style="height:600px;">
        <el-form model="form" style="margin-top:-20px;height:auto" label-width="80px">
            <el-row>
            	<el-col span="12">
                    <el-form-item label="上传标题">
                        <el-input v-model="form.UpLoadTitle" style="width:540px;" clearable></el-input>
                    </el-form-item>
                </el-col>
            </el-row>
            <el-row>
                <el-col span="12" style="display: none;">
                    <el-form-item label="Id">
                        <el-input v-model="form.UpLoadId" style="width:220px;" clearable></el-input>
                    </el-form-item>
                </el-col>  
            </el-row>            
            <el-row>
                 <el-col span="12">
                    <el-form-item label="上传">
                        <el-upload class="upload-demo"
				               :action="uploadActionUrl"
				               :file-list="fileList2">
					        <el-button size="small" type="primary">点击上传</el-button>					        
					    </el-upload>
                    </el-form-item>
                </el-col>
            </el-row>
        </el-form>
        <div slot="footer" class="dialog-footer" style="margin-top:-30px;">
            <el-button size="small" v-on:click="dialogUpLoadFormVisible = false">取 消</el-button>
            <el-button type="primary" size="small" v-on:click="SaveUpLoad(form)">确 定</el-button>
        </div>
    </el-dialog>
</div>

<script>
    var UpLoadVue;
    $(function () {
        NProgress.done();
        UpLoadVue = new Vue({
            el: "#UpLoad",
            data: {
                tableData: [],
                txtName:"",
                dialogUpLoadFormVisible: false,
                form: {},
              	uploadActionUrl:"/BaseSet/UpLoad",
              	fileList2: [],
                DicData:[],
                currentPage:1,
        		pagesize:8,
            },
            created: function () {
                this.QueryData();
            },
            methods: {
                handleAdd: function () {
                    var _self = this;
                    _self.form = {};
                    this.dialogUpLoadFormVisible = true;
                },
                handleEdit: function (UpLoadId) {
                    var _self = this;
                    $.ajax({
                        type: "get",
                        dataType: "json",
                        contentType: "application/json",
                        url: "/BaseSet/GetUpLoadCenterByKey?pGuid=" + guid(),
                        data: {
                            id: UpLoadId
                        },
                        success: function (result) { 
                            _self.form = result;
                        }
                    });
                   
                    this.dialogUpLoadFormVisible = true;
                },
                QueryData: function () {
                    var _self = this;
                    var title = this.txtName;
                    $.ajax({
                        type: "get",
                        dataType: "json",
                        contentType: "application/json",
                        url: "/BaseSet/GetUpLoadCenterListByCondition?pGuid=" + guid(),
                        data: {
                            KeyName: title
                        },
                        success: function (result) {
                            UpLoadVue.tableData = result;
                        },
                        error: function (json) {
                            _self.$message.error('加载图片信息失败');
                        }
                    });
                },
                SaveUpLoad: function (UpLoad) {
                    var _self = this;
                    $.ajax({
                        type: "post",
                        dataType: "json",
                        url: "/BaseSet/SaveUpLoadCenter",
                        data: UpLoad,
                        success: function (result) {
                            if (result) {
                                _self.dialogUpLoadFormVisible = false;
                                _self.QueryData();
                                _self.$message({
                                    type: 'success',
                                    message: '保存成功!'
                                });
                            } else {
                                _self.$message.error('保存文章信息失败');
                            }
                        },
                        error: function (json) {
                            _self.$message.error('保存文章信息失败');
                        }
                    });
                },
                handleDisable: function (UpLoadId, status) {
                    var _self = this;
                    $.ajax({
                        type: "get",
                        dataType: "json",
                        url: "/BaseSet/EnableUpLoadCenter",
                        data: {
                            UpLoadId: UpLoadId,
                            status: status
                        },
                        success: function (result) {
                            if (result) {
                                _self.$message({
                                    type: 'success',
                                    message: '保存成功!'
                                });
                                _self.QueryData();
                            } else {
                                _self.$message({
                                    type: 'info',
                                    message: '保存失败!'
                                });
                            }
                        }
                    });
                },
//              handleRemove:function(file, fileList){
//	                $.ajax({
//	                        type: "get",
//	                        dataType: "json",
//	                        contentType: "application/json",
//	                        url: "/BaseSet/UpLoadRemove",
//	                        success: function (result) {
//	                            //self.fileList2 = result;
//	                        }
//	                    });
//              },
                handleSizeChange: function (size) {
			        this.pagesize = size;
			    },
			    handleCurrentChange: function(currentPage){
			        this.currentPage = currentPage;
			    }
            }

        });
    })

    function guid() {
        function S4() {
            return (((1 + Math.random()) * 0x10000) | 0).toString(16).substring(1);
        }
        return (S4() + S4() + "-" + S4() + "-" + S4() + "-" + S4() + "-" + S4() + S4() + S4());
    }


</script>