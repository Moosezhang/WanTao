<head>
   	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	<meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport" />
	<meta content="yes" name="apple-mobile-web-app-capable" />
	<meta content="black" name="apple-mobile-web-app-status-bar-style" />
	<meta content="telephone=no" name="format-detection" />
	<meta name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=no" />
	<meta charset="UTF-8" />
    <title>我的课程</title>
</head>
<body>
  	<header data-am-widget="header" class="am-header am-header-default" style="background-color: white;">
	  <div class="am-header-left am-header-nav">
		    <a v-if="document.referrer!=''" href="javascript:window.history.back(); " class="">
		  	<img class="am-header-icon-custom" src="~/Images/icon/返回.png" alt=""/>
		  </a>
	  </div>
	   <h3 class="am-header-title" 
	   	style="width:100px;float:left;color: black;padding-top: 15px;font-size: 18px;margin-right: 0px;">
          	我的历史          	
      </h3>
      <div class="am-input-group">	
	      <span class="am-input-group-btn" >
	      	<button class="am-btn" type="button" onclick="GoHome()" 
	        	style="background-color: white;border-color:white;float: right;margin-top: 3px;">
	        	<div><img class="am-header-icon-custom" src="~/Images/icon/主页.png" style="height: 20px;" alt=""/></div>
	        </button>
	        
	      </span>
	    </div>
	</header>
  	<hr style="margin-top: 0px;"/>
  	<div id="myClass">
  		
        <div data-am-widget="list_news" class="am-list-news am-list-news-default" style="margin-top:5px;margin-left:0px;margin-right:0px;">		
			  <div class="am-list-news-bd">
				  <ul class="am-list" v-for="item in myHistoryList">
				     <!--缩略图在标题左边-->
				      <li class="am-g am-list-item-desced am-list-item-thumbed am-list-item-thumb-left" 
				      	style="padding-top: 5px;padding-bottom: 5px;height: 110px;">
				        <div class="am-u-sm-4 am-list-thumb" style="width: 49%;height: 100%;padding-right: 0px;max-height: 100px;">
				        	<div class="zoomImage" style="height: 100px;" v-bind:style="{backgroundImage:'url(' + item.images + ')'}"></div>
				        </div>
						<table class=" am-u-sm-8 am-list-main" style="width: 49%;height: 100%;position:relative;" v-on:click="GoDetail(item.ObjectId,item.ObjectType,item.link)">
							<tr>
								<td colspan="2">
									<div style="color: #444444;overflow: hidden;height: 40px;"><b>{{item.Name}}</b></div>									
								</td>
								
							</tr>
							<tr>
								<td colspan="2">
									<div style="color: #999999;font-size: 12px;overflow: hidden;height: 35px;">{{item.Abstract}}</div>									
								</td>
								
							</tr>
							<!--<tr>
								<td style="width: 50%;">
									<div style="color: red;padding-top: 10px;">¥{{item.ClassPrice}}</div>
								</td>
								<td>
									<div style="font-size: 12px;color:#0084C7;padding-top: 10px;">{{item.ClassTeacher}}</div>
								</td>
								
							</tr>-->
						</table>				        
				      </li>  
				    </ul>
			  </div>
		</div>
  	</div>
  	
</body>


<script>
	var openid = '@ViewBag.Openid';
	var myClassVue=new Vue({
		el:"#myClass",
		data:{
			myHistoryList:[],
			txtTitle:"",
			classCount:0,
			orderNo:""
		},
		created: function () {
                this.Query()
         },
         methods:{
         	Query:function () {  
			    var _self = this;
                var title = this.txtTitle;
                $.ajax({
                    type: "get",
                    dataType: "json",
                    contentType: "application/json",
                    url: "/WxMy/GetHistory?pGuid=" + guid(),
                    data: {
                        openid:openid
                    },
                    success: function (result) {                       
                        _self.myHistoryList = result;
                    },
                    error: function (json) {
                        _self.$message.error('查询失败');
                    }
                });
			},
			GoDatail:function(objectId,type,link)
			{
				if(type==1)
				{
					window.location.href = "ClassDetail?openid=" + openid+"&&classId="+id;
				}
				
				if(type=2)
				{
					window.location.href = model.ImageLink;
				}
			}
         }
	});
	
	 function guid() {
        function S4() {
            return (((1 + Math.random()) * 0x10000) | 0).toString(16).substring(1);
        }
        return (S4() + S4() + "-" + S4() + "-" + S4() + "-" + S4() + "-" + S4() + S4() + S4());
    }
	 
	  
	 function GoHome()
	 {
	 	window.location.href = "/WxHome/Index?openid="+openid+"&&code=null&&state=null";
	 }
	
</script>
